<%= form_for [refinery, :products_admin, @product] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @product,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :price -%>
    <%= f.text_field :price -%>
  </div>
  
  <div class='field'>
  	<%= f.label :description -%>
    <%= render :partial => "/refinery/admin/pages/tabs/images", :locals =>{ 
				:f => f,
				:fields => [:description]
				}%> 
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:abstract,  :detail],
                :object => "products/product" -%>
  </div>

  <div class='field'>
    <%= f.label :showOnIndex -%>
    <%= f.check_box :showOnIndex, :checked => @product[:showOnIndex] -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.products.admin.products.product'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @product.name) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
