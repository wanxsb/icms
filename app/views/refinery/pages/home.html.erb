<!-- encoding: utf-8 -->
<div class="top">
	<div id="banner">		
		<%= raw @page.content_for(:body) %>
	</div>
</div>
<div class="middle">
<% if !@products_on_index.blank? %>
  <% @products_on_index.each_with_index do |product, index| %>
	<div class="section <%= cycle('section-shop', 'section-cms', :name => 'first-cycle') %>" >
		<% if index % 2 == 0 %>
			<div class="left large-part">
		<% else %>
			<div class="right large-part">
		<% end %>
			<div class="gallery">
				<%= raw product.description %>
				<div class="inner-gallery">
					<%= raw product.description %>
				</div>
			</div>
		</div>
		<% if index % 2 == 1 %>
			<div class="left small-part">
		<% else %>
			<div class="right small-part">
		<% end %>
			<div class="name">
				<div  style="color:#343434;font-weight:bold;font-size:30px;font-family:Impact;float:left;text-align:center;width:100%;">
					<%= product.name %>
				</div>
			</div>
			<div class="price">
				<%= number_to_currency(product.price, :precision=>2)%>
			</div>
			<div class="abstract">
				<%= raw product.abstract %>
			</div>
			<div class="btn <%= cycle("btn-cms", "btn-shop", :name => 'second-cycle') -%>"">
				<a href="#"><%= I18n.t("know detail") %></a>
			</div>
		</div>
	</div>
  <% end %>	
<% end %>
 </div>
